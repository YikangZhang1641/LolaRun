package entity;

public class Robot {
	private int robot_id;
	private String type;
	private boolean busy;
	private int order_id;
	private String position;
	
	private Robot(RobotBuilder rb) {
		this.robot_id = rb.robot_id;
		this.type = rb.type;
		this.busy = rb.busy;
		this.order_id = rb.order_id;
		this.position = rb.position;
	}
	
	public static class RobotBuilder {
		private int robot_id;
		private String type;
		private boolean busy;
		private int order_id;
		private String position;
		
		public RobotBuilder setRobotID(int robot_id) {
			this.robot_id = robot_id;
			return this;
		}
		
		public RobotBuilder setType(String type) {
			this.type = type;
			return this;
		}
		
		public RobotBuilder setBusy(boolean busy) {
			this.busy = busy;
			return this;
		}
		
		public RobotBuilder setOrderID(int order_id) {
			this.order_id = order_id;
			return this;
		}
		
		public RobotBuilder setPosition(String position) {
			this.position = position;
			return this;
		}
		
		public Robot build(RobotBuilder builder) {
			return new Robot(this);
		}
	}
}
